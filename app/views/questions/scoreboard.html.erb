<h1>Scores</h1>

<div class="clear" style="height:20px;"></div>
<!-- BEGIN EXAMPLE TABLE PORTLET-->
<div class="portlet-body">
  <table class="table table-striped table-bordered table-hover dataTable no-footer" id="sample_6" role="grid" aria-describedby="sample_6_info">
    <thead>
    <tr>
      <th>#</th>
      <th>Score</th>
    </tr>
    </thead>
    <tbody>
<% @users.each do |user|%>
            <tr id="<%= 'highlight' if user.id == @current_user.id %>">
              <td class="<%= 'highlight' if user.id == @current_user.id %>">#<%= user.place %></td>
              <td class="<%= 'highlight' if user.id == @current_user.id %>"><%= user.total_score %></td>
            </tr>
<% end %>
    </tbody>
  </table>
</div>